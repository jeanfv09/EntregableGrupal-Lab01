@model Lab01_Grupo1.Models.ContactoViewModel
@{
    ViewData["Title"] = "Contacto";
}

<style>
    body {
        background: url('https://static.vecteezy.com/system/resources/previews/006/712/985/non_2x/abstract-health-medical-science-healthcare-icon-digital-technology-science-concept-modern-innovation-treatment-medicine-on-hi-tech-future-blue-background-for-wallpaper-template-web-design-vector.jpg') 
                        no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #fff;
        text-shadow: 0 1px 3px rgba(0,0,0,0.5);
    }

    .section-title {
        font-size: 3rem;
        font-weight: bold;
        color: #ffffff;
        margin-bottom: 20px;
        text-shadow: 0 2px 6px rgba(0,0,0,0.6);
        text-align: center;
    }

    .form-container {
        background: rgba(0, 0, 0, 0.6);
        padding: 30px;
        border-radius: 15px;
        max-width: 600px;
        margin: auto;
        backdrop-filter: blur(5px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
    }

    .form-label {
        font-weight: bold;
    }

    .btn-custom {
        background: #0077b6;
        border: none;
        padding: 12px;
        font-size: 1.2rem;
        border-radius: 12px;
        color: #fff;
        width: 100%;
        transition: all 0.3s ease;
    }

    .btn-custom:hover {
        background: #00b4d8;
        transform: translateY(-3px);
    }

    .result-box {
        margin-top: 20px;
        padding: 15px;
        background: rgba(255,255,255,0.08);
        border-radius: 8px;
        color: #fff;
    }
</style>

<h2 class="section-title">ðŸ“§ ContÃ¡ctanos</h2>

<div class="form-container">
    <form asp-action="Contacto" method="post">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Correo" class="form-label"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Mensaje" class="form-label"></label>
            <textarea asp-for="Mensaje" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Mensaje" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-custom">Enviar</button>
    </form>

        @if (!string.IsNullOrEmpty(Model?.ResultadoSentimiento))
            {
                <div class="result-box">
                    <strong>Sentimiento detectado:</strong> @Model.ResultadoSentimiento<br />
                    <strong>Confianza:</strong> @String.Format("{0:P1}", Model.Confidence ?? 0)
                </div>
            }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
