@{
    ViewData["Title"] = "Dashboard Power BI de Lista de Medicos";
}

<style>
    body {
        background: url('https://wallpapers.com/images/hd/blue-vital-sign-hd-medical-m0tj1swas1gb75k9.jpg') 
                    no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #fff;
        text-shadow: 0 1px 3px rgba(0,0,0,0.5);
    }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-top: 40px;
        margin-bottom: 20px;
        text-align: center;
        color: #ffffff;
        text-shadow: 0 2px 6px rgba(0,0,0,0.6);
    }

    .powerbi-container {
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        overflow: hidden;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.3);
        margin: 0 auto;
        max-width: 1140px;
    }

    .powerbi-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }
</style>

<h1 class="dashboard-title">@ViewData["Title"]</h1>

<div class="powerbi-container">
    <iframe 
        title="Dashboard Power BI"
        src="https://app.powerbi.com/reportEmbed?reportId=f3a2b21d-914c-43c5-b536-97687ddc7d8c&autoAuth=true&ctid=98201fef-d9f6-4e68-84f5-c2705074e342" 
        allowFullScreen="true">
    </iframe>
</div>
