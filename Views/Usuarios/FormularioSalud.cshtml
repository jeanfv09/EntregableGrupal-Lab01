@model Lab01_Grupo1.Models.FormularioSaludViewModel
@{
    ViewData["Title"] = "Formulario de Salud";
}

<style>
    body {
        background: url('https://static.vecteezy.com/system/resources/previews/006/712/985/non_2x/abstract-health-medical-science-healthcare-icon-digital-technology-science-concept-modern-innovation-treatment-medicine-on-hi-tech-future-blue-background-for-wallpaper-template-web-design-vector.jpg') 
                    no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #fff;
    }

    .form-container {
        background: rgba(0,0,0,0.6);
        padding: 30px;
        border-radius: 12px;
        max-width: 400px;
        margin: 80px auto;
        box-shadow: 0 4px 15px rgba(0,0,0,0.5);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #fff;
    }

    label {
        font-weight: bold;
    }

    input, textarea {
        width: 100%;
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 8px;
        border: none;
    }

    .text-danger {
        font-size: 0.9rem;
        color: #ff6b6b !important;
        margin-bottom: 10px;
    }

    .btn-submit {
        background: #0077b6;
        border: none;
        padding: 12px;
        width: 100%;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
    }

    .btn-submit:hover {
        background: #00b4d8;
        transform: scale(1.05);
    }
</style>

<div class="form-container">
    <h2>Formulario de Salud</h2>
    <form asp-action="FormularioSalud" method="post">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" placeholder="Ejemplo: Juan Pérez García" />
        <span asp-validation-for="Nombre" class="text-danger"></span>

        <label asp-for="Edad"></label>
        <input asp-for="Edad" type="number" placeholder="Ejemplo: 25" />
        <span asp-validation-for="Edad" class="text-danger"></span>

        <label asp-for="Peso"></label>
        <input asp-for="Peso" type="number" step="0.1" placeholder="Ejemplo: 70.5" />
        <span asp-validation-for="Peso" class="text-danger"></span>

        <label asp-for="Altura"></label>
        <input asp-for="Altura" type="number" step="0.1" placeholder="Ejemplo: 175" />
        <span asp-validation-for="Altura" class="text-danger"></span>

        <label asp-for="Sintomas"></label>
        <textarea asp-for="Sintomas" rows="2" placeholder="Ejemplo: Dolor de cabeza, fiebre, cansancio"></textarea>
        <span asp-validation-for="Sintomas" class="text-danger"></span>

        <label asp-for="Antecedentes"></label>
        <textarea asp-for="Antecedentes" rows="2" placeholder="Ejemplo: Diabetes, hipertensión, cirugías previas"></textarea>
        <span asp-validation-for="Antecedentes" class="text-danger"></span>

        <button type="submit" class="btn-submit">Enviar Formulario</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
