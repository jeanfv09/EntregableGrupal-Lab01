@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-CORP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Lab01_Grupal.styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background: linear-gradient(90deg, #ffffff, #e9f5ff);
        }

        .navbar-brand {
            font-weight: bold;
            color: #0077b6 !important;
        }

        .nav-link {
            color: #495057 !important;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #0077b6 !important;
        }

        footer {
            background-color: #ffffff;
            border-top: 1px solid #dee2e6;
        }

        footer small {
            color: #6c757d;
        }

        footer a {
            color: #0077b6;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        /* ===========================================================
           🔵 ASISTENTE MÉDICO - ESTILOS PRINCIPALES
        ============================================================ */

        #assistant-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: #0077b6;
            color: white;
            width: 55px;
            height: 55px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 28px;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            z-index: 9999;
        }

        #assistant-window {
            position: fixed;
            bottom: 85px;
            right: 20px;
            width: 320px;
            height: 400px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            display: none;
            flex-direction: column;
            z-index: 9999;
        }

        #assistant-header {
            background: #0077b6;
            padding: 10px;
            color: white;
            font-weight: bold;
            border-radius: 12px 12px 0 0;
            text-align: center;
        }

        #assistant-messages {
            flex: 1;
            overflow-y: auto;
            padding: 10px;
            background: white;
            color: black;
            font-size: 15px;
            display: flex;
            flex-direction: column;
        }

        #assistant-input-area {
            display: flex;
            border-top: 1px solid #ddd;
        }

        #assistant-input {
            flex: 1;
            border: none;
            padding: 10px;
            outline: none;
        }

        #assistant-send {
            background: #0077b6;
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
        }

        /* ===========================================================
           💬 ESTILOS DE BURBUJAS TIPO CHAT
        ============================================================ */

        /* Usuario */
        .msg-user {
            background: #cde6ff;
            color: black;
            padding: 8px 12px;
            border-radius: 10px;
            margin: 6px 0;
            max-width: 75%;
            align-self: flex-end;
            text-align: right;
        }

        /* Asistente */
        .msg-bot {
            background: #e9ecef;
            color: black;
            padding: 8px 12px;
            border-radius: 10px;
            margin: 6px 0;
            max-width: 75%;
            align-self: flex-start;
        }

    </style>
</head>

<body class="d-flex flex-column min-vh-100">

<header>
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container">

            @if (HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre") != null)
            {
                var rol = HttpContextAccessor.HttpContext.Session.GetString("UsuarioRol");

                if (!string.IsNullOrEmpty(rol) && rol.ToLower() == "administrador")
                {
                    <a class="navbar-brand" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-heart-pulse me-2"></i> E-CORP
                    </a>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Usuarios" asp-action="Index">
                        <i class="bi bi-heart-pulse me-2"></i> E-CORP
                    </a>
                }
            }
            else
            {
                <a class="navbar-brand" href="javascript:void(0)">
                    <i class="bi bi-heart-pulse me-2"></i> E-CORP
                </a>
            }

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Menú">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre") != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link">
                                <i class="bi bi-person-circle"></i>
                                Hola, @HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre")
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Registrarse
                            </a>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>
</header>


<main role="main" class="flex-grow-1 container py-4">
    @RenderBody()
</main>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>
@await RenderSectionAsync("Scripts", required: false)

<!-- ===========================================================
     🩺 ASISTENTE MÉDICO
=========================================================== -->

<div id="assistant-button" title="Asistente Médico">🩺</div>

<div id="assistant-window">
    <div id="assistant-header">Asistente Médico - MedAssist</div>
    <div id="assistant-messages"></div>

    <div id="assistant-input-area">
        <input type="text" id="assistant-input" placeholder="¿En qué puedo ayudarte?" />
        <button id="assistant-send">Enviar</button>
    </div>
</div>

<script src="~/js/assistant.js"></script>

</body>
</html>
