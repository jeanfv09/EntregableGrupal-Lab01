@model IEnumerable<Lab01_Grupo1.Models.Contacto>

@{
    ViewData["Title"] = "Registro de Contacto";
}

<h2 class="text-center mb-4">ðŸ“‹ Registro de Contacto</h2>

<table class="table table-striped table-bordered table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Mensaje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contacto in Model)
        {
            <tr>
                <td>@contacto.Id</td>
                <td>@contacto.Nombre</td>
                <td>@contacto.Correo</td>
                <td>@(contacto.GetType().GetProperty("Mensaje")?.GetValue(contacto) ?? string.Empty)</td>
            </tr>
        }
    </tbody>
</table>