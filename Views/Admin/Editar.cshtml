@model Lab01_Grupo1.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2 class="mt-3">Editar Usuario</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Editar" asp-route-id="@Model.IdUsuario" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdUsuario" />

    <div class="mb-3">
        <label asp-for="UsuarioNombre" class="form-label"></label>
        <input asp-for="UsuarioNombre" class="form-control" />
        <span asp-validation-for="UsuarioNombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Clave" class="form-label"></label>
        <input asp-for="Clave" type="password" class="form-control" value="@Model.Clave" />
        <span asp-validation-for="Clave" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" type="email" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rol" class="form-label"></label>
        <select asp-for="Rol" class="form-select">
            <option value="usuario">usuario</option>
            <option value="admin">admin</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="ListaUsuarios" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
