@model List<Lab01_Grupo1.Models.ComentarioAnalizado>

@{
    ViewData["Title"] = "Clasificación de Comentarios y Contactos";
}

<!-- Asegúrate de tener Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<h2 class="mb-4">@ViewData["Title"]</h2>

<table class="table table-bordered table-striped text-center align-middle shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>Mensaje</th>
            <th>Clasificación</th>
            <th>Puntuación</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string color = item.EtiquetaPredicha switch
            {
                "Positivo" => "table-success",
                "Negativo" => "table-danger",
                _ => "table-warning"
            };

            string icono = item.EtiquetaPredicha switch
            {
                "Positivo" => "<i class='bi bi-plus-circle text-success'></i>",
                "Negativo" => "<i class='bi bi-dash-circle-fill text-danger'></i>",
                _ => "<i class='bi bi-dash-circle text-warning'></i>"
            };

            <tr class="@color">
                <td class="text-start">@item.Comentario</td>
                <td class="fw-bold" style="font-size:1.1rem;">
                    @Html.Raw(icono) @item.EtiquetaPredicha
                </td>
                <td>@item.Puntuacion.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        border-radius: 10px;
        overflow: hidden;
    }

    th {
        font-size: 1.1rem;
        text-transform: uppercase;
    }

    td {
        font-size: 1rem;
    }

    .table-success {
        background-color: #e9f7ef !important;
    }

    .table-warning {
        background-color: #fff8e1 !important;
    }

    .table-danger {
        background-color: #fdecea !important;
    }
</style>




