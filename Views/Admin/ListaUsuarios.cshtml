@model IEnumerable<Lab01_Grupo1.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h2 class="mt-3">Lista de Usuarios</h2>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.IdUsuario</td>
                    <td>@usuario.UsuarioNombre</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Correo</td>
                    <td>@usuario.Rol</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No hay usuarios con rol 'usuario'.</td>
            </tr>
        }
    </tbody>
</table>
