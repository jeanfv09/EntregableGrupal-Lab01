@model IEnumerable<Lab01_Grupo1.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
    var search = ViewData["Search"] as string;
}

<h2 class="mt-3">Lista de Usuarios</h2>

<form class="row g-2 align-items-center mt-3" method="get" asp-action="ListaUsuarios">
    <div class="col-auto">
        <input type="text" name="nombre" class="form-control" placeholder="Buscar por nombre o usuario"
               value="@(search ?? "")" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a asp-action="ListaUsuarios" class="btn btn-outline-secondary">Limpiar</a>
    </div>
</form>

@if (!string.IsNullOrWhiteSpace(search))
{
    <div class="mt-2">
        <span class="badge bg-info text-dark">Filtrando por: <strong>@search</strong></span>
    </div>
}

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.IdUsuario</td>
                    <td>@usuario.UsuarioNombre</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Correo</td>
                    <td>@usuario.Rol</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@usuario.IdUsuario" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@usuario.IdUsuario" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No hay usuarios con rol 'usuario'.</td>
            </tr>
        }
    </tbody>
</table>
