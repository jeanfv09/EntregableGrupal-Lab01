@model IEnumerable<Lab01_Grupo1.Models.Medico>

<h2>Lista de Médicos actual</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Agregar Médico
    </a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Especialidad</th>
        <th>Universidad</th>
        <th>Teléfonos</th>
    </tr>
</thead>
<tbody>
@foreach (var medico in Model)
{
    <tr>
        <td>@medico.Usuario.Nombre</td>
        <td>@medico.Usuario.Correo</td>
        <td>@medico.Especialidad</td>
        <td>@medico.Perfil?.Universidad</td>
        <td>@string.Join(", ", medico.Telefonos.Select(t => t.Telefono))</td>
            <td>
                <a asp-action="Edit" asp-route-id="@medico.IdMedico" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@medico.IdMedico" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
    </tr>
}
</tbody>

</table>
